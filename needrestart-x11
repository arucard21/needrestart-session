use warnings;
use strict;

use NeedRestart::Utils;
use X11::WindowHierarchy;

my $fh = nr_fork_pipe(0, qw(needrestart -b));

my %fnames;
while(<$fh>) {
    chomp;

    next unless(/^NEEDRESTART-PID: (.+)=([\d,]+)$/);

    $fnames{$1} = split(/,/, $2);
    print "$1 => $2\n";
}

use Data::Dumper;
print Dumper(x11_hierarchy);
